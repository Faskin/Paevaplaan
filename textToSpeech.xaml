<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Paevaplaan.textToSpeech">
    <ContentPage.Content>
        <StackLayout Spacing="0">
            <Entry x:Name="text"
                   Placeholder="Write some text"
                   PlaceholderColor="Gray"
                   >

            </Entry>
            <Label Text="Pitch"
                   BackgroundColor="NavajoWhite"
                   TextColor="Black"
                   FontSize="22">

            </Label>
            <Slider x:Name="Volume"
                    ValueChanged="speek_ValueChanged"
                    Minimum="0.1"
                    Maximum="1.0"
                    Value="1.0">

            </Slider>
            <Slider x:Name="Pitch"
                    ValueChanged="Pitch_ValueChanged"
                    Minimum="0.1"
                    Maximum="1.0"
                    Value="1.0">

            </Slider>
            <Button
                Clicked="Button_Clicked"
                Text="Speak">

            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
